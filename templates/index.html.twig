{% extends 'base.html.twig' %}

{% block title %}Twitter tweet wall {% endblock %}

{% block body %}
    {{ dump(res) }}
    <div id="tweetContainer" class="container">
    {% for tweet in res %}
    {% autoescape %}
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">

                <div class="row">
                    <div class="col-md-auto">
                        <img src="{{ tweet.user.profile_image_url }}"/>
                    </div>
                    <div class="col-7">
                        <strong class="d-inline-block mb-2 text-success" style="margin-bottom: 1px !important;"> <a href=""> {{ tweet.user.screen_name |raw }}</a></strong>
                        <div class=" text-muted" style="font-size: 9px;">{{ tweet.user.description |raw }} </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm">
                        <p class="card-text mb-auto"> {{ tweet.canonicalMessage }}</p>
                        {% for tags in tweet.entities.hashtags %}
                            <span style="color:green;float:left">#{{ tags.text|raw }}&nbsp; </span>
                        {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {% endautoescape %}
        {% endfor %}
    </div>
{% endblock %}